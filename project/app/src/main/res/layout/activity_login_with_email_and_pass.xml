<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginWithEmailAndPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="Email"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/emailSignInField"
            android:layout_width="@dimen/largeButtonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginBottom="15dp"
            android:background="@drawable/app_textfield_bg"
            android:fontFamily="@font/poppins_light"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:paddingStart="10dp"
            android:textCursorDrawable="@null"
            android:elevation="6dp"
            android:textSize="@dimen/mediumTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="Password"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/passwordSignInField"
            android:layout_width="@dimen/largeButtonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginBottom="15dp"
            android:background="@drawable/app_textfield_bg"
            android:fontFamily="@font/poppins_light"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:paddingStart="10dp"
            android:textCursorDrawable="@null"
            android:elevation="6dp"
            android:textSize="@dimen/mediumTextSize" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signInButton"
            android:layout_width="@dimen/largeButtonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:background="@drawable/app_button_bg"
            android:fontFamily="@font/poppins"
            android:text="Sign In"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>