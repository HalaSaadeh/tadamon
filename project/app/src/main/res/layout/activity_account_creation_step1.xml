<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountCreationStep1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/poppins"
            android:text="Account Creation"
            android:textColor="@color/black"
            android:textSize="@dimen/largeTextSizeVar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonHeightAltSmall"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins_medium"
                android:text="STEP 1 OF 4"
                android:textColor="@color/black"
                android:textSize="@dimen/smallTextSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="What should we call you?"
                android:textColor="@color/black"
                android:textSize="@dimen/largeTextSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins"
                android:text="Your name will be displayed to everyone\non the application"
                android:textColor="@color/black"
                android:textSize="@dimen/smallTextSize" />

            <EditText
                android:id="@+id/nameField"
                android:layout_width="@dimen/largeButtonWidth"
                android:layout_height="@dimen/buttonHeight"
                android:layout_marginBottom="20dp"
                android:background="@drawable/app_textfield_bg"
                android:fontFamily="@font/poppins_light"
                android:hint="Enter your full name"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/inner_frame_layout_padding"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textSize="@dimen/mediumTextSize" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/question1NextButton"
                android:layout_width="@dimen/largeButtonWidth"
                android:layout_height="@dimen/buttonHeight"
                android:layout_marginBottom="20dp"
                android:background="@drawable/app_button_bg"
                android:fontFamily="@font/poppins"
                android:text="Next"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="By continuing, you agree to accept our\nPrivacy Policy and Terms of Service."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/verySmallTextSize"
            android:layout_gravity="center_horizontal"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:justifyContent="center"
            app:alignItems="flex_end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_travel1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>