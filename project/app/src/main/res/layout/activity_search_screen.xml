<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchScreenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/leftPadding"
                android:layout_marginTop="@dimen/leftPadding"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/veryLargeTextSize" />

            <View
                android:layout_width="80dp"
                android:layout_height="5dp"
                android:layout_marginHorizontal="@dimen/leftPadding"
                android:layout_marginBottom="25dp"
                android:background="@color/redPrime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/leftPadding"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Look for people in need of help"
                android:textColor="@color/black"
                android:textSize="@dimen/largeTextSize" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/leftPadding">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:alignItems="center"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <ImageButton
                            android:id="@+id/cat_health"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/category_button"
                            android:elevation="8dp"
                            android:src="@drawable/ic_virus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Health Crisis"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallTextSize" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:alignItems="center"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <ImageButton
                            android:id="@+id/cat_financial"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/category_button"
                            android:elevation="8dp"
                            android:src="@drawable/ic_financial_crisis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Financial Crisis"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallTextSize" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:alignItems="center"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <ImageButton
                            android:id="@+id/cat_wildfires"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/category_button"
                            android:elevation="8dp"
                            android:src="@drawable/ic_wildfire" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Wildfires"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallTextSize" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:alignItems="center"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <ImageButton
                            android:id="@+id/cat_natural"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/category_button"
                            android:elevation="8dp"
                            android:src="@drawable/ic_earthquake" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Natural Crisis"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallTextSize" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:alignItems="center"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <ImageButton
                            android:id="@+id/cat_technological"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/category_button"
                            android:elevation="8dp"
                            android:src="@drawable/ic_technological_crisis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Tech Crisis"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallTextSize" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:alignItems="center"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <ImageButton
                            android:id="@+id/cat_winter"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/category_button"
                            android:elevation="8dp"
                            android:src="@drawable/ic_snow_block" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Winter Crisis"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallTextSize" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        app:alignItems="center"
                        app:flexDirection="column"
                        app:justifyContent="center">

                        <ImageButton
                            android:id="@+id/cat_social"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/category_button"
                            android:elevation="8dp"
                            android:src="@drawable/ic_social_crisis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Social Crisis"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallTextSize" />


                    </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/leftPadding"
                android:layout_marginBottom="30dp"
                app:alignItems="center"
                app:justifyContent="space_between">

                <EditText
                    android:id="@+id/searchTextView"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="@dimen/largeButtonWidth"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="14dp"
                    android:background="@drawable/app_textfield_bg"
                    android:drawableStart="@drawable/ic_search_small"
                    android:drawablePadding="20dp"
                    android:elevation="6dp"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Search"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGreyPrime"
                    android:textSize="@dimen/mediumTextSize" />

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_proceed" />

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/leftPadding"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/poppins_light"
                android:text="Recently Searched"
                android:textColor="@color/black"
                android:textSize="@dimen/largeTextSizeVar" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagsGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp">

                <!--                <com.google.android.material.chip.Chip-->
                <!--                    android:id="@+id/chip_1"-->
                <!--                    style="@style/Widget.MaterialComponents.Chip.Entry"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:chipBackgroundColor="@color/white"-->
                <!--                    app:chipCornerRadius="@dimen/buttonRadius"-->
                <!--                    android:checkable="false"-->
                <!--                    android:elevation="5dp"-->
                <!--                    android:text="Search12"-->
                <!--                    android:textAppearance="@style/ChipAppearance"-->
                <!--                    app:checkedIconVisible="false"-->
                <!--                    app:chipIconVisible="false"-->
                <!--                    app:closeIcon="@drawable/ic_delete"-->
                <!--                    app:closeIconEnabled="true"-->
                <!--                    app:closeIconSize="15dp"-->
                <!--                    app:closeIconTint="@color/redPrime"-->
                <!--                    app:closeIconVisible="true" />-->


            </com.google.android.material.chip.ChipGroup>


        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>